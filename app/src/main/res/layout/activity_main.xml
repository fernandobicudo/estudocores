<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="3"
    android:useDefaultMargins="true"
    >

    <TextView
        android:id="@+id/redTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        android:layout_column="0"
        android:layout_row="0"
        />

    <SeekBar
        android:id="@+id/redSeekBar"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_gravity="fill_horizontal"
        android:max="255"/>

    <TextView
        android:id="@+id/redValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/redValue"
        android:layout_column="2"
        android:layout_row="0"
        />

    <TextView
        android:id="@+id/greenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G"
        android:layout_column="0"
        android:layout_row="1"
        />

    <SeekBar
        android:id="@+id/greenSeekBar"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_gravity="fill_horizontal"
        android:max="255"/>

    <TextView
        android:id="@+id/greenValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/greenValue"
        android:layout_column="2"
        android:layout_row="1"
        />


    <TextView
        android:id="@+id/blueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:layout_column="0"
        android:layout_row="2"
        />

    <SeekBar
        android:id="@+id/blueSeekBar"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_gravity="fill_horizontal"
        android:max="255"
/>
    <TextView
        android:id="@+id/blueValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/greenValue"
        android:layout_column="2"
        android:layout_row="2"
        />

    <SurfaceView
        android:id="@+id/colorSurfaceView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:background="@color/resultColor"
        android:layout_row="2"
        />
</GridLayout>